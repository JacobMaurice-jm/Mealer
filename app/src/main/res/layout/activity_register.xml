<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_yellow"
    android:textAlignment="center"
    android:theme="@style/ThemeOverlay.Mealer.FullscreenContainer"
    tools:context=".Register">

    <TextView
        android:id="@+id/role_select_and_welcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="58dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:text="@string/registering_welcome_message"
        android:textAlignment="gravity"
        android:textIsSelectable="false"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="191dp"
        android:layout_height="0dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="271dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/role_select_and_welcome">

        <RadioButton
            android:id="@+id/cookSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cook"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/clientSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client"
            android:textSize="20sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>